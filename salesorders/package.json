{
  "name": "salesorders",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xsenv": "^3.1.1",
    "@sap/xssec": "^3.2.7",
    "express": "^4",
    "passport": "^0.5.0",
    "hdb": "^0.18.3"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "start:dev": "cds watch",
    "deploy": "cf deploy mta_archives/salesorders_1.0.0.mtar"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "ProductsService": {
        "kind": "odata",
        "model": "srv\\external\\ProductsService",
        "credentials": {
          "url": "http://localhost:4004/products",
          "authentication": "BasicAuthentication",
          "username": "admin",
          "password": "dummy"
        },
        "[production]": {
          "credentials": {
            "destination": "products-srv",
            "path": "/products"
          }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
